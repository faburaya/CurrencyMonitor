@{
    ViewData["Title"] = "Löschen";
}

<h1>Löschen</h1>

<h3>Sind Sie sicher?</h3>
<div>
    <h4>Dieses Abonnement zum Beobachten eines Wechselkurses wird gelöscht</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubscriptionForExchangeRate.Label)
