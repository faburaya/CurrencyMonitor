        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubscriptionForExchangeRate.Label)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubscriptionForExchangeRate.EMailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubscriptionForExchangeRate.EMailAddress)
