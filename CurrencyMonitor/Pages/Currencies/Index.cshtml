@page
@model CurrencyMonitor.Pages.Currencies.IndexModel

@{
    ViewData["Title"] = "Währungen";
}

<h1>Anerkannte Währungen</h1>

<p>
    <a asp-page="Create">Fügen Sie eine neue Währung hinzu</a>
</p>
<form>
    <p>
        Währung: <input type="text" asp-for="Filter" />
        <input type="submit" value="Filtern" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RecognizedCurrency[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecognizedCurrency[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecognizedCurrency[0].Symbol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RecognizedCurrency)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Symbol)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Bearbeiten</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Löschen</a>
                </td>
            </tr>
        }
    </tbody>
</table>
