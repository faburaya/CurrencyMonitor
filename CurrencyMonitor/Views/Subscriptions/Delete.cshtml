<h3>Sind Sie sicher?</h3>
<div>
    <h4>Dieses Abonnement zum Beobachten eines Wechselkurses wird gelöscht</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Label)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EMailAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EMailAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodeCurrencyToSell)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodeCurrencyToSell)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodeCurrencyToBuy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodeCurrencyToBuy)
        </dd>
