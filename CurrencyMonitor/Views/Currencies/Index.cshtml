@model IEnumerable<CurrencyMonitor.DataModels.RecognizedCurrency>

@{
    ViewData["Title"] = "Währungen";
}

<h1>Anerkannte Währungen</h1>

<p>
    <a asp-action="Create">Fügen Sie eine neue Währung hinzu</a>
</p>
<form asp-controller="Currencies" asp-action="Index" method="get">
    <p>
        Währung: <input type="text" name="searchString" />
        <input type="submit" value="Filtern" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Symbol)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-partitionkey="@item.PartitionKeyValue" asp-route-id="@item.Id">Bearbeiten</a> |
                    <a asp-action="Details" asp-route-partitionkey="@item.PartitionKeyValue" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-partitionkey="@item.PartitionKeyValue" asp-route-id="@item.Id">Löschen</a>
                </td>
            </tr>
        }
    </tbody>
</table>
